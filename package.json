{
  "name": "syzmeku-engine",
  "version": "1.0.0",
  "description": "",
  "main": "server/server.cjs",
  "scripts": {
    "start": "node server/server.cjs",
    "dev": "npm run install-all && npm run dev-server & npm run dev-client",
    "dev-server": "nodemon server/server.cjs",
    "dev-client": "cd client && npm run dev",
    "install-all": "npm install && cd client && npm install",
    "setup": "npm install && cd client && npm install",
    
    // FIX: Removed the original "build" script that caused recursive failures.
    
    // NEW SCRIPT: Use a unique name for the final client build step inside render-build
    "client-build": "cd client && npm run build",

    // RENDER ENTRY POINT: This runs the sequential commands without recursion.
    "render-build": "npm install && npm run setup && npm run client-build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "mongoose": "^8.4.1",
    "path": "^0.12.7"
  }
}
